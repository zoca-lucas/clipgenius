# ClipGenius - Environment Variables
# Copy this file to .env and configure for your environment

# =============================================================================
# AI Provider Settings
# =============================================================================

# Minimax API (recommended - uses Anthropic-compatible endpoint)
# Get your API key at: https://platform.minimax.io/
MINIMAX_API_KEY=your-minimax-api-key-here
MINIMAX_MODEL=minimax/minimax-m2
MINIMAX_BASE_URL=https://api.minimax.io/anthropic

# Ollama (local fallback - no API key needed)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.1

# AI Provider selection: "auto" (uses Minimax if key available), "minimax", or "ollama"
AI_PROVIDER=auto

# =============================================================================
# Whisper Settings (Speech-to-Text)
# =============================================================================

# Model size: tiny, base, small, medium, large
# Larger models = better quality but slower
WHISPER_MODEL=base
WHISPER_LANGUAGE=pt

# =============================================================================
# Database & Storage
# =============================================================================

DATA_DIR=../data
DATABASE_URL=sqlite:///../data/database.db

# =============================================================================
# Server Settings
# =============================================================================

# CORS origins for frontend access
# Development (default): http://localhost:3000,http://127.0.0.1:3000
# Production example: https://yourdomain.com,https://www.yourdomain.com
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# =============================================================================
# Video Processing
# =============================================================================

# Maximum upload file size (in bytes)
# Default: 500MB = 524288000
MAX_UPLOAD_SIZE=524288000

# AI Reframe (face tracking for vertical video)
ENABLE_AI_REFRAME=true
REFRAME_SAMPLE_INTERVAL=0.5
REFRAME_DYNAMIC_MODE=false
